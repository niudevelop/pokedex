{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "esnext",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}